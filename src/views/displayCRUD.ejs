<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display CRUD</title>
    <style>
        table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
        }

        .btn-edit, .btn-delete{
            outline: none;
            border: none;            
            height: 25px;
            width: 60px;
            border-radius: 4px;
            cursor: pointer;
            margin: 3px;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            
        }
        .btn-delete{            
            background-color: #e55039 ;            
        }
        .btn-edit{
            background-color: #f6b93b ;
        }

        </style>
</head>
<body>
    <table style="width:100%">
        <tr>
          <th>Id</th>
          <th>Email</th>
          <th>Password</th>
          <th>Firstname</th>
          <th>Lastname</th> 
          <th>Address</th>
          <th>Phonenumber</th>
          <th>Gender</th>
          <th>Image</th>
          <th>RoleId</th>
          <th>Position</th>
          <th>CreatedAt</th>
          <th>UpdatedAt</th>
          <th>Actions</th>
        </tr>
        <tr>          
          <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].id %></td>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].password %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td><%= dataTable[i].phonenumber %></td>
              <td><%= dataTable[i].gender %></td>
              <td><%= dataTable[i].image %></td>
              <td><%= dataTable[i].roleId %></td>
              <td><%= dataTable[i].positionId %></td>
              <td><%= dataTable[i].createdAt %></td>
              <td><%= dataTable[i].updatedAt %></td>
              <td>
                <a href="/edit-crud?id=<%= dataTable[i].id%>" class="btn-edit" type="button">Edit</a>
                <a class="btn-delete " type="button">Delete</a>
              </td>
            </tr>
         <% } %>
        </tr>
      </table>
</body>
</html>